//                                     [ \$(curl -s 'https://erp.dev.digitoll.bg/actuator/info' | jq -r "" | grep -o '$ecr:${version}\\|$BUILD_NUMBER' | wc -l) -eq 2 ] || exit 1
//                             """, returnStatus: true
